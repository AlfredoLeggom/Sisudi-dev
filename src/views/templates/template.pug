//-Importar configuración
include ../config/config

//-Importar funciones
include ../function/link-css
include ../function/title-name

//-Bloque para insertar configuración
block config

doctype html
html(lang="es")

    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
        meta(name="keywords" content="comercializadora, importaciones, exportaciones, cotización servicios, cotización productos")
        
        block description

        link(rel="shortcut icon", href="./assets/images/logo-sisudi.png", type="image/x-icon")
        link(rel="stylesheet", href="./styles/normalize_v8.0.1.css")
        //-libreria de logos font awesome 
        link(rel="stylesheet", href="./assets/font-awesome/css/all.min.css")

        //-Función link-css para hoja de estilo y responsive
        +link-css(actual_page)
        +title-name(actual_page, title_page)

        block styles

    body
        div.general-wrap
        
            block header

            block container 

            block footer

        //Inicio de script
        block scripts
            //-Librerias
            script(src="./script/jquery-3.6.0.min.js" type="text/javascript") 
            script(src="./assets/glider/glider.min.js" type="text/javascript")
            //-Script generales
            script(src="./script/modal.js" type="text/javascript") 
            script(src="./script/menu-phone.js" type="text/javascript") 
        //Fin de script