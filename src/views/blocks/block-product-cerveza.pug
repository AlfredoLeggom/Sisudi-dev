mixin block-product-cerveza (productData, pageData)
    section.wrap-product 
        div.product__data
            each data in pageData
                h2!= data.title 
                hr
                h3!= data.subtitle
                span
                    p!= data.descripcion
                    p!= data.comunicate
                    p 
                        a(href="./assets/catalogos/catalogo-cervezas.pdf" target="_blank") Cátalogo de cervezas.pdf 
        
        div.product__container
            each product in productData 
                div.product-box
                    div.product-box--img
                        img(src= product.imglink)
                    div.product-box--data
                        span
                            p!= '<strong>Ceveza: </strong> ' + product.title
                            p!= '<strong>Tipo: </strong>' + product.tipo
                            p!= '<strong>Porcentaje de Alcohol: </strong>' + product.porcentaje
                            p!= '<strong>Presentación: </strong>' + product.presentacion
                            p!= '<strong>Descripción: </strong>' + product.descripcion
                             