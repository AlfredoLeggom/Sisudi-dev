extends ../templates/template

block config
    -actual_page = "articulos_promocionales"

    //-Importación de bloques
    include ../blocks/block-menu
    include ../blocks/block-product-articulos_promocionales
    //-include ../blocks/block-moda
    include ../blocks/block-footer
    //-Importar configuraciones extras
    include ../config/config-product
    include ../config/json/json-articulos_promocionales

block append description 
    meta(name="description" content="Proservip te ofrece la mejor opción en productos desechables")

block header
    //Inicio de menu
    +block-menu(Categories, SubCategories, CategoriesIcon, url_mainLogo)
    //Fin de menu
    
block container
    //Inicio de cervezas
    +block-product-articulos_promocionales(articulos_promocionalesProductData, articulos_promocionalesDataPage)
    //Fin de cervezas

block footer
    //Inicio de Footer
    +block-footer(title_page, categorias, subCategorias, nameCategorias, nameSubCategorias)
    //Fin de Footer