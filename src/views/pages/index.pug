extends ../templates/template

block config
    - actual_page = 'index'
    
    //-Importar Funciones

    //-Importar configuraciones extras
    include ../config/config-product
    include ../config/config-data
    include ../config/config-slider

    //-Importar Bloques
    include ../blocks/block-menu
    include ../blocks/block-slider
    include ../blocks/block-slider2
    include ../blocks/block-gallery 
    include ../blocks/block-form
    include ../blocks/block-footer

block append description 
    meta(name="description" content="Comercializadora Proservip es una empresa 100% mexicana, joven e innovadora, formada por gente con amplia experiencia en el área comercial. Nuestra actividad principal es ofrecer las mejores soluciones y alternativas para su empresa basándonos en la alta eficacia en el servicio")

block styles 
    link(rel="stylesheet", href="./assets/glider/glider.min.css")

