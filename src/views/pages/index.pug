block container 
    //Inicio de slider de productos mas vendidos
    +block-slider(mostSelledProducts)
    //Fin de slider de productos mas vendidos

    //Inicio de galleria de productos
    +block-gallery(Categories, Product, MottoProduct, ImageProduct, LinkProduct)
    //Fin de galleria de productos

    //Inicio de Slider de clientes
    +block-slider2(clients)
    //Fin de Slider de clientes
    
    //Inicio de formulario
    +block-form(direction, phone, time, mail, facebook)
    //Fin de formulario

block footer
    //Inicio de Footer
    +block-footer(title_page, categorias, subCategorias, nameCategorias, nameSubCategorias)
    //Fin de Footer

append scripts
    //-Scripts  
    script(src="./script/scroll-menu.js" type="text/javascript")  
    script(src="./script/scroll-animation.js" type="text/javascript") 
    script(src="./script/slider-uno.js" type="text/javascript") 
    script(src="./script/slider-dos.js" type="text/javascript") 